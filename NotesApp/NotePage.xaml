<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.NotePage"
             Title="NotePage">
    <VerticalStackLayout>

        <VerticalStackLayout
             Padding="30,0"
             Spacing="25">

        <Editor
            x:Name="TextoEditor"
            Placeholder="Digite um texto aqui"
            HeightRequest="150"
            WidthRequest="300"/>
            

        <HorizontalStackLayout
              Padding="50"
              Spacing="75"
              HorizontalOptions="Center">


        <Button
             x:Name="SalvarButton"
             Text="Guardar" 
             SemanticProperties.Hint="Guarda o texto que foi escrito em um arquivo"
             Clicked="SalvarButton_Clicked"
             HorizontalOptions="Fill" />
        <Button
             x:Name="DeletarButton"
             Text="Apagar"
             SemanticProperties.Hint="Apaga o arquivo"
             Clicked="DeletarButton_Clicked"
             HorizontalOptions="Fill"/>

            </HorizontalStackLayout>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>